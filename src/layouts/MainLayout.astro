---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import Newsletter from "../components/Newsletter.astro"
---
<style>
@font-face {
  font-family: 'Geist';
  src: url('/fonts/Geist-Regular.woff') format('woff');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

*{
    font-family: 'Geist';
}
</style>

<html lang="en" class="w-full h-full">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" href="../styles/base.css">
    </head>

    <body class="w-full flex flex-col items-center bg-[#0E0E0E] text-gray-400 font-sans">
        <Header />
        <main class="w-full max-w-screen-md px-6 mx-auto min-h-screen flex flex-col gap-4 justify-start align-center pt-2">
            <slot />
            <Newsletter />
        </main>
        <Footer />
    </body>
</html>
